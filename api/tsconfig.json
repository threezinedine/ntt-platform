{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*", "src/main.ts"],
	"exclude": ["node_modules", "tests"]
}
